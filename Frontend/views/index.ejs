<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../styles/index.css">
    <title>Short Url</title>
</head>
<body>
    <div class="container">
        <h1>Url Shortener</h1>
        <form action="/shortUrls" method="POST" class="my-4">
            <div class="input-group">
                <input required placeholder="Url" type="url" name="fullUrl" class="form-control">
                <button class="btn btn-primary" type="submit">Short Url</button>
            </div>
        </form>
        
        <table class="table table-responsive ">
            <thead>
                <tr class="table-primary">
                    <th>Url completa</th>
                    <th>Short Url</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach((shortUrl, index) => { %>
                    <tr>
                        <td><a href="<%= shortUrl.originalUrl %>"><%= shortUrl.originalUrl %></a></td>
                        <td><a href="/<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
